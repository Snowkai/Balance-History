<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Balance_History.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="0"
            Padding="0"
            VerticalOptions="Start">
            <HorizontalStackLayout
                HorizontalOptions="Fill">
                <HorizontalStackLayout
                    Margin="0,0,15,0">
                    <Button
                        Text="Add Record">
                    </Button>
                    <Button
                        Text="Remove Record"></Button>
                </HorizontalStackLayout>
                <HorizontalStackLayout
                    Margin="15,0,0,0">
                    <Button
                        Text="Report"></Button>
                </HorizontalStackLayout>
                <HorizontalStackLayout
                    Margin="15,0,0,0"
                    HorizontalOptions="End">
                    <Button
                        Text="Profiles"
                        Clicked="BackToProfiles"></Button>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
