<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Balance_History.StartPage"
             Title="StartPage">
    <VerticalStackLayout
        BackgroundColor="#282828">
        <Border
            Margin="100"
            WidthRequest="350"
            HeightRequest="500"            
            BackgroundColor="#464646">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <StackLayout
                x:Name="button_set">
                <Button
                CornerRadius="10"
                VerticalOptions="Start"
                Text="+ Create your profile"
                TextColor="WhiteSmoke"
                FontSize="Medium"
                FontAttributes="Bold"
                HeightRequest="100"
                Clicked="CreateForm" BackgroundColor="#6C6C6C"/>
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>